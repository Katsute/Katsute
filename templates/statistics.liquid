<svg
    x="0"
    y="0"
    width="100%"
    >
    <g>
        {% for stat in statistics %}
            <g
                class="delayed"
                style="animation-delay: {{ forloop.index | times: 300 }}ms"
                transform="translate(0, {{ forloop.index | times: 25 }})"
                >
                <text
                    class="bold"
                    y="12.5">{{ stat }}:</text>
                <text
                    x="120"
                    y="12.5">{{ statistics[stat] }}</text>
            </g>
        {% endfor %}
    </g>
    <g transform="translate(200, 0)">
        {% assign len = statistics | size %}
        {% for stat in all_time %}
            <g
                class="delayed"
                style="animation-delay: {{ forloop.index | plus: len | times: 300 }}ms"
                transform="translate(0, {{ forloop.index | times: 25 }})"
                >
                <text
                    class="bold"
                    y="12.5">{{ stat }}:</text>
                <text
                    x="120"
                    y="12.5">{{ all_time[stat] }}</text>
            </g>
        {% endfor %}
    </g>
</svg>